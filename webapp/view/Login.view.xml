<mvc:View
  controllerName="chartwallet.controller.Login"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:mvc="sap.ui.core.mvc"
>

<Page id="Login" showHeader="false" showFooter="false">
  <VBox
      height="100%"
      fitContainer="true"
      justifyContent="Center"
      class="loginForm"
    >
    <l:BlockLayout background="Dashboard">
 			<l:BlockLayoutRow>
				<l:BlockLayoutCell title="{i18n>loginFormTitle}">
				  <f:Form id="loginForm" editable="true">
						<f:layout>
							<f:ResponsiveGridLayout
                  labelSpanXL="12"
                  labelSpanL="12"
                  labelSpanM="12"
                  labelSpanS="12"
                  adjustLabelSpan="false"
                  emptySpanXL="0"
                  emptySpanL="0"
                  emptySpanM="0"
                  emptySpanS="0"
                  columnsXL="12"
                  columnsL="12"
                  columnsM="12"
                  singleContainerFullSize="false"
                />
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
    						<f:formElements>
   								<f:FormElement label="{i18n>loginFormEmailField}">
    									<f:fields>
   										<Input id="loginEmailField" placeholder="example@domain.com" submit=".onLoginPress" />
    									</f:fields>
   								</f:FormElement>
                  <f:FormElement label="{i18n>loginFormPasswdField}">
    									<f:fields>
   										<Input id="loginPasswdField" type="Password" submit=".onLoginPress" />
    									</f:fields>
   								</f:FormElement>
                  <f:FormElement>
                    <HBox
                        width="100%"
                        justifyContent="SpaceBetween"
                        alignItems="Center"
                      >
                      <Link
                          href="#/subscribe"
                          text="{i18n>loginFormSubscribeLink}"
                        />
                      <Button
                          press=".onLoginPress"
                          type="Emphasized"
                          text="{i18n>loginFormLoginBtn}"
                        />
                    </HBox>
                  </f:FormElement>
          			</f:formElements>
              </f:FormContainer>
            </f:formContainers>
          </f:Form>
				</l:BlockLayoutCell>
 			</l:BlockLayoutRow>
    </l:BlockLayout>
  </VBox>

  <footer>
    <OverflowToolbar>

    </OverflowToolbar>
  </footer>
</Page>

</mvc:View>
